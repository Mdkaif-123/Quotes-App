<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:gravity="center"
    tools:context=".Quote_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tvQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/bevan"
                android:gravity="center"
                android:text="hello"
                android:textColor="@color/secondaryWhite"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/montez"
                android:gravity="center"
                android:text="@string/quot_success_quot"
                android:textColor="@color/secondaryWhite"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/md_kaif_ansari"
                android:textColor="#8F8E8E"
                android:textColorHint="#514F4F"
                android:textColorLink="#8E8E8E"
                android:textSize="16sp" />

            <Button
                android:id="@+id/shareButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"
                android:drawableEnd="@drawable/shareicon"
                android:drawableTint="#000000"
                android:fontFamily="@font/advent_pro_light"
                android:gravity="center"
                android:padding="14dp"
                android:paddingEnd="30dp"
                android:selectAllOnFocus="false"
                android:text="@string/share"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>